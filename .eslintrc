		"expect": false,
		"beforeEach": false,
		"sinon": false,
		"sandbox": false,
		"Memory": false,
		"Game": false,
		"RoomPosition": false,
		"FIND_SOURCES": false,
		"OK": false,
		"ERR_NOT_IN_RANGE": false,
    "STRUCTURE_SPAWN": false,
    "WORK": false,
    "CARRY": false,
    "MOVE": false,
